<html>
<!-- File for home page -->

<head>
	<title>Neutral Noggin - Home</title>

	<meta charset="utf-8">
	<!-- Set size of screen to fit device-->
	<meta name="viewport" content="width=device-width, initial-scale=1.0">

	<!-- Link css files -->
	<link href="css/bootstrap.css" rel="stylesheet">
	<link href="css/bootstrap-theme.css"rel="stylesheet">
	<link href="css/neutral-noggin.css" rel="stylesheet">

	<!-- Link google fonts -->
	<link href="https://fonts.googleapis.com/css?family=Cabin|Montserrat|Roboto+Slab&display=swap" rel="stylesheet">


	<!-- Link scripts -->
	<script src="https://code.jquery.com/jquery.js"></script>
	<script src="/js/bootstrap.min.js"></script>
	<script src="/js/neutral-noggin.js"></script>

</head>


<body>

	<div class="tilt" id="{{userTilt}}" name="tilt"></div>

	<div class="container pad-for-top-banner"></div>

	<div class="top-banner">
		<form class="search-bar" role="form" method="get" action="/add">
		    <div class="form-group">
		      <input type="text" class="form-control" id="name" placeholder="Search Topics" name="name">
		    </div>
		 </form>
	</div>

	<div class="myTaskbar">
		<div class="taskbarTable">
			<table>
				<tr>
		        	<td>
		        		<a id="taskButton1" class="selected" href="home?ut=0">Daily News</a>
		        	</td>
		        	<td>
		        		<a id="taskButton2" href="search?ut=0">Trending</a>
		        	</td>
		        	<td>
		        		<a id="taskButton3" href="saved?0">Saved</a>
		        	</td>
		        	<td>
		        		<a id="taskButton4" href="more?0">More...</a>
		        	</td>
		      	</tr>
		    </table>
		</div>

	</div>

	<div class="container" id="article-list">

		{{#each articles}}
		<a class="container link index" id="{{tilt}}" href={{URL}} target="_blank">

			<div class="container article-container">

				<div class="container headline-container">
					<h3 class="headline">{{headline}}</h3>
				</div>

				<div class="container image-container">
					<img src={{imageURL}} class="img-responsive">
				</div>

			</div>

		</a>

		<div class="container article-break"></div>

		{{/each}}

	</div>

</body>
</html>