<html>
<!-- File for home page -->

<head>
	<title>Neutral Noggin - Home</title>

	<meta charset="utf-8">
	<!-- Set size of screen to fit device-->
	<meta name="viewport" content="width=device-width, initial-scale=1.0">

	<!-- Link scripts -->
	<script src="js/bootstrap.js"> </script>
	<!-- Link css files -->
	<link href="css/bootstrap.css" rel="stylesheet">
	<link href="css/bootstrap-theme.css"rel="stylesheet">
	<link href="css/neutral-noggin.css" rel="stylesheet">

	<!-- Link google fonts -->
	<link href="https://fonts.googleapis.com/css?family=Cabin|Montserrat|Roboto+Slab&display=swap" rel="stylesheet">

</head>


<body>
	<div class="container pad-for-top-banner"></div>

	<div class="top-banner">
		<form class="search-bar" role="form" method="get" action="/add">
		    <div class="form-group">
		      <input type="text" class="form-control" id="name" placeholder="Search Topics" name="name">
		    </div>
		 </form>
	</div>

	<div class="container article-list">

		{{#each articles}}
		<a href={{URL}}>

			<div class="container article-container">

				<div class="container headline-container">
					<h3 class="headline">{{headline}}</h3>
				</div>

				<div class="container image-container">
					<img src={{imageURL}} class="img-responsive">
				</div>

			</div>

		</a>

		<div class="container article-break"></div>

		{{/each}}

	</div>

</body>
</html>